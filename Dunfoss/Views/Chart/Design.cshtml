<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
@{
    ViewBag.Title = "Design";
}

<div class="chart-options">
    @using (Ajax.BeginForm("DesignDraw", "Chart", new AjaxOptions { UpdateTargetId = "chart-draw" }))
    {
	<span>@Resource.TypeGraph </span>
        <select id="ChartType" name="ChartType">
            <option value="1" selected>@Resource.ClosureByWeek</option>
            <option value="2">@Resource.ClosureByOffice</option>
            
        </select>
        <br />
		<br/>
        <span>@Resource.Filter: </span>
        <select id="designType" name="designType">
            <option value="O" selected>O - orders(заказы)</option>
            <option value="P">P - projects(проекты)</option>
            <option value="S">S - standartization(стандартизация)</option>
        </select>
        <br />
        <div id="FilterType">
            <span>@Resource.Filter: </span>
            <select id="filterType" name="filterType" class="option-chart-filter">
                <option value="1" selected>@Resource.Month</option>
                <option value="2">@Resource.Week</option>
            </select>
        </div>

        <div id="WeekFilter" style="display: none;" class="option-chart-filter">
            <span class="chart-options-opt">@Resource.FilterWeek: @Resource.From</span><input type="number" value="1" max="52" min="1" name="weekMin" />
            <span> @Resource.To </span><input type="number" value="52" max="52" min="1" name="weekMax" />
            <br />
        </div>

        <div id="MonthFilter" class="option-chart-filter">

            <span>
                @Resource.From
                <select id="chartNumber" name="monthMin" style="width: 90px;">
                    <option value="1" selected>@Resource.MJan</option>
                    <option value="2">@Resource.MFeb</option>
                    <option value="3">@Resource.MMar</option>
                    <option value="4">@Resource.MApr</option>
                    <option value="5">@Resource.MMay</option>
                    <option value="6">@Resource.MJun</option>
                    <option value="7">@Resource.MJul</option>
                    <option value="8">@Resource.MAug</option>
                    <option value="9">@Resource.MSep</option>
                    <option value="10">@Resource.MOkt</option>
                    <option value="11">@Resource.MNov</option>
                    <option value="12">@Resource.MDec</option>
                </select>
            </span>
            <span>
                @Resource.To
                <select id="chartNumber" name="monthMax" style="width: 90px;">
                    <option value="1">@Resource.MJan</option>
                    <option value="2">@Resource.MFeb</option>
                    <option value="3">@Resource.MMar</option>
                    <option value="4">@Resource.MApr</option>
                    <option value="5">@Resource.MMay</option>
                    <option value="6">@Resource.MJun</option>
                    <option value="7">@Resource.MJul</option>
                    <option value="8">@Resource.MAug</option>
                    <option value="9">@Resource.MSep</option>
                    <option value="10">@Resource.MOkt</option>
                    <option value="11">@Resource.MNov</option>
                    <option value="12" selected>@Resource.MDec</option>
                </select>
            </span>
            <br />
        </div>
        <div class="chart-options-submit"><input type="submit" value="@Resource.CreateBtn" /></div>

    }

</div>

<script type="text/javascript">
    
    $("#filterType").change(function () {
        if ($(this).val() == 2) {
            Week();
        }
        else {
            Month();
        }
    });

    function Week() {
        $('#MonthFilter').hide();
        $('#WeekFilter').show();
    }
    function Month() {
        $('#WeekFilter').hide();
        $('#MonthFilter').show();
    }
    function CloseAll() {
        $("#FilterType").hide();
        $("#WeekFilter").hide();
        $("#MonthFilter").hide();
    }
</script>

<div id="chart-draw">
</div>


