<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
@{
    ViewBag.Title = "DesignersChart";
}

<div class="chart-options">
    @using (Ajax.BeginForm("Graph3", "Chart", new AjaxOptions { UpdateTargetId = "chart-draw" }))
    {
        <span>Тип графика: </span>
        <select id="ChartType" name="ChartType">
            <option value="1" selected>Оценки по дизайнерам</option>
            <option value="2">Средняя скорость выполнения модели</option>
        </select>
        
        <br />
        <div id="FilterType">
            <span>Фильтрация: </span>
            <select id="filterType" name="filterType" class="option-chart-filter">
                <option value="1" selected>По месяцам</option>
                <option value="2">По неделям</option>
            </select>
        </div>

        <div id="WeekFilter" style="display: none;" class="option-chart-filter">
            <span class="chart-options-opt">Номер недели: </span><input type="number" value="1" max="52" min="1" name="weekNumber" />
            <br />
        </div>

        <div id="MonthFilter" class="option-chart-filter" style="display: none;">
            <span class="chart-options-opt">Номер месяца: </span><input type="number" value="1" max="12" min="1" name="monthNumber" />
            <br />
        </div>

        <div id="WeekFilterMany" style="display: none;" class="option-chart-filter">
            <span class="chart-options-opt">Фильтрация по неделям: с</span><input type="number" value="1" max="52" min="1" name="min" />
            <span> по </span><input type="number" value="52" max="52" min="1" name="max" />
            <br />
        </div>
        <div id="MonthFilterMany" class="option-chart-filter">
            <span class="chart-options-opt">Фильтрация по месяцам: с</span><input type="number" value="1" max="12" min="1" name="minMonth" />
            <span> по </span><input type="number" value="12" max="12" min="1" name="maxMonth" />
            <br />
        </div>

        <div class="chart-options-submit"><input type="submit" value="Построить" /></div>

    }

</div>

<script type="text/javascript">

    $("#filterType").change(function () {
        if ($(this).val() == 2 && $("#ChartType").val() == 2) {
            Week();
        }
        else if ($(this).val() == 1 && $("#ChartType").val() == 2) {
            Month();
        }
        else if ($(this).val() == 1 && $("#ChartType").val() == 1) {
            MonthMany();
        }
        else {
            WeekMany();
        }
    });

    $("#ChartType").change(function () {
        if ($(this).val() == 2 && $("#filterType").val() == 2) {
            Week();
        }
        else if ($(this).val() == 2 && $("#filterType").val() == 1) {
            Month();
        }
        else if ($(this).val() == 1 && $("#filterType").val() == 1) {
            MonthMany();
        }
        else {
            WeekMany();
        }
    });

    function Week() {
        $('#MonthFilter').hide();
        $('#MonthFilterMany').hide();
        $('#WeekFilterMany').hide();
        $('#WeekFilter').show();
    }
    function WeekMany() {
        $('#MonthFilter').hide();
        $('#MonthFilterMany').hide();
        $('#WeekFilterMany').show();
        $('#WeekFilter').hide();
    }
    function Month() {
        $('#MonthFilterMany').hide();
        $('#WeekFilterMany').hide();
        $('#WeekFilter').hide();
        $('#MonthFilter').show();
    }
    function MonthMany() {
        $('#MonthFilterMany').show();
        $('#WeekFilterMany').hide();
        $('#WeekFilter').hide();
        $('#MonthFilter').hide();
    }
    function CloseAll() {
        $('#MonthFilterMany').hide();
        $('#WeekFilterMany').hide();
        $("#WeekFilter").hide();
        $("#MonthFilter").hide();
    }
</script>

<div id="chart-draw">
</div>

