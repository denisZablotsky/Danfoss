@using System.Collections.Generic;
@model IEnumerable<string>

<div  style="width:500px; margin: auto; padding-top: 15px;"><label><input type="checkbox" name="SelectAll" id="selectAll">Выбрать все причины</label></div>
@using (Ajax.BeginForm((string)ViewBag.Function, "Chart", new {min = ViewBag.min, max = ViewBag.max }, new AjaxOptions { UpdateTargetId = "chart45" }))
{
    <div id="reasons-list">
        @foreach (string reason in Model)
        {
            <label><input type="checkbox" name="checkedValues" value="@reason">@reason</label> <br />

        }
    </div>
    <div class="chart-options"><div class="chart-options-submit"><input type="submit" value="Перестроить" /></div></div>
}

<div id="chart45"></div>

<script type="text/javascript">
        $("#selectAll").change(function () {
            var checked = $("#selectAll").is(':checked');
            if (checked) {
                $("input[name=checkedValues]").prop('checked', true);
            } else {
               $("input[name=checkedValues]").prop('checked', false);
            }
        });
    </script>