<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Danfoss </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript "></script>
</head>
<body> 
        <div class="header-main-container">
            <!-- Классы navbar и navbar-default -->
            <nav class="navbar navbar-default">
                <!-- Контейнер -->
                <div class="container-fluid">
                    <!-- Заголовок -->
                    <div class="navbar-header">
                        <!-- Кнопка «Гамбургер» -->
                        <button type="button" class="navbar-toggle collapsed menu-btn" data-toggle="collapse" data-target="#navbar-main" aria-expanded="false">
                            <span class=sr-only>Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!-- Бренд или название сайта -->
                        <a class="navbar-brand logo" href="#">
                            <img src="~/Images/DanfossLogo.jpg" height="50" />
                        </a>
                        @Html.ActionLink("Российский портал группы БТП", "Index", "Home",null, new { @class = "menu-link devis hidden-xs" })
                    </div>
                    <!-- Основная часть меню -->
                    <div class="collapse navbar-collapse" id="navbar-main">

                        <!-- Содержимое основной части -->
                        <ul class="nav navbar-nav navigation">
                            
                            <li><a id="menu-item" class="menu menu-link" href="#">Новости</a></li>
                           
                            
                            <li>@Html.ActionLink("Контакты", "Contacts", "Home", new { area = "" }, new { @class = "menu-link", @id = "menu-item" })</li>
                        </ul>
                        <div class="login-container">@Html.ActionLink("Вход в личный кабинет", "LogIn", "Home", new { area = "" }, new { @class = "login-link menu-link", @id = "menu-item" })</div>
                    </div>
                    
                </div>
            </nav>
        </div>
    <div class="main-content">
        @RenderBody()
    </div>
    
</body>
</html>